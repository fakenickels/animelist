<%= form_for @anime, html: { multipart: true } do |f| %>
  <% if @anime.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@anime.errors.count, "error") %> prohibited this anime from being saved:</h2>

      <ul>
      <% @anime.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :imagem %><br>
    <%= f.file_field :image, class: 'form-control' %>
  </div>  
  <div class="form-group">
    <%= f.label :nome %><br>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label "descrição" %><br>
    <%= f.text_area :description, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label "episódios" %><br>
    <%= f.number_field :episodes, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label "faixa etária" %><br>
    <%= f.text_field :rating, class: 'form-control' %>
  </div>
  <div class="actions">
    <%= f.submit, class: 'btn btn-success' %>
  </div>
<% end %>
